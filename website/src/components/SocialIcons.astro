---
import { Icon } from '@astrojs/starlight/components';

const links: Array<{
    label: string;
    href: string;
    icon: 'open-book' | 'github' | 'discord';
}> = [
	{
		label: 'Introduction',
		href: '/docs/introduction/',
		icon: 'open-book',
	},
    {
        label: 'GitHub',
        href: 'https://github.com/slatedb/slatedb',
        icon: 'github',
    },
    {
        label: 'Discord',
        href: 'https://discord.gg/mHYmGy5MgA',
        icon: 'discord',
    },
]
---

{
	links.length > 0 && (
		<>
			{links.map(({ label, href, icon }) => (
				<a {href} rel="me" class="sl-flex">
					<span class="sr-only">{label}</span>
					<Icon name={icon} size="var(--sl-social-icon-size)" />
				</a>
			))}
		</>
	)
}

<style>
		a {
			color: var(--sl-social-icon-color);
			padding: 0.5em;
			margin: -0.5em;
		}

		svg:hover {
			color: var(--sl-social-icon-hover-color);
		}
</style>